extends layout

block content
    .w3-card-4
        header.w3-container.w3-pink
            h1= titulo
            a.w3-button.w3-green(href= "/compositores/add") +
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Nome
                    th Biografia
                    th Data Nascimento
                    th Data Obito
                    th Periodo
                    th Actions
                each cp in lista
                    tr
                        td
                            a(href="/compositores/"+cp._id) #{cp._id}
                        td=cp.nome
                        td=cp.bio
                        td=cp.dataNasc
                        td=cp.dataObito
                        td=cp.periodo
                        td 
                            a.w3-button.w3-blue(href="/compositores/edit/"+ cp._id) Edit
                            a.w3-button.w3-red(href="/compositores/delete/"+cp._id) Delete

        footer.w3-container.w3-pink
            address Gerado por Pedro Carneiro em #{data} 
            a(href="/") Voltar 
