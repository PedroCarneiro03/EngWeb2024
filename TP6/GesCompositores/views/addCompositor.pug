extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h1=titulo
        form.w3-container(method="POST" action="/compositores")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="_id")
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Biografia
                input.w3-input.w3-round(type="text" name="bio")
                label Data Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc")
                label Data Obito
                input.w3-input.w3-round(type="text" name="dataObito")
                label Periodo
                input.w3-input.w3-round(type="text" name="periodo")

            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register 


        footer.w3-container.w3-pink
            address Gerado por EngWeb2024 em #{data}
            a(href="/compositores") Voltar 
