extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h1=titulo
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value=periodo.id)
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=periodo.nome)
                label Origem
                input.w3-input.w3-round(type="text" name="origem" value=periodo.bio)
                label Seculo
                input.w3-input.w3-round(type="text" name="sec" value=periodo.dataNasc)
                label Descricao
                input.w3-input.w3-round(type="text" name="desc" value=periodo.dataObito)

            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register 

        footer.w3-container.w3-pink
            address Gerado por EngWeb2024 em #{data}
            a(href="/periodos") Voltar 
