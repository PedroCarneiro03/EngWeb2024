extends layout

block content
    .w3-card-4
        header.w3-container.w3-pink
            h1= titulo
            a.w3-button.w3-green(href= "/periodos/add") +
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Nome
                    th Origem
                    th Seculo
                    th Descricao
                    th Actions
                each p in lista
                    tr
                        td
                            a(href="/periodos/"+p.id) #{p.id}
                        td=p.nome
                        td=p.origem
                        td=p.sec
                        td=p.desc
                        td 
                            a.w3-button.w3-blue(href="/periodos/edit/"+ p.id) Edit
                            a.w3-button.w3-red(href="/periodos/delete/"+p.id) Delete

        footer.w3-container.w3-pink
            address Gerado por Pedro Carneiro em #{data} 
            a(href="/") Voltar 
